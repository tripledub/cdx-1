%link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/

- content_for(:subheader) do
  .container
    .section.group
      .col.col-12
        %h1
          = I18n.t('home.settings.header')

    .section.settings.centered
      -# ------------ ALERTS
      - if has_access_to_test_results_index?
        = setting_card title: I18n.t('home.settings.alert'), href: alerts_path, icon: 'fa-exclamation-triangle', colour: 'red' do |c|
          - c.body do
            = I18n.t('home.settings.alerts_notice')

      -# ------------ ROLES
      - if has_access_to_roles_index_display?
        = setting_card title: I18n.t('home.settings.role', count: @roles_count), href: roles_path, icon: 'fa-toggle-on', colour:'silver' do |c|
          - c.body do
            = I18n.t('home.settings.roles_notice')

      -# ------------ SITES
      - if has_access_to_sites_index?
        = setting_card title: I18n.t('home.settings.sites'), href: sites_path, icon: 'fa-university', colour:'blue' do | c |
          - c.body do
            = I18n.t('home.settings.sites_notice')

      -# ------------ LOGS
      - if has_access?(Device, Policy::Actions::SUPPORT_DEVICE)
        = setting_card title: I18n.t('home.settings.messages'), href: device_messages_path, icon: 'fa-bell', colour:'orange' do | c |
          - c.body do
            = I18n.t('home.settings.messages_notice')

      -# ------------ MODELS
      - if has_access_to_device_models_index?
        = setting_card title: I18n.t('home.settings.models'), href: device_models_path, icon: 'fa-mobile', colour:'light-green' do | c |
          - c.body do
            = I18n.t('home.settings.models_notice')

      -# ------------ USERS
      - if has_access_to_users_index?
        = setting_card title: I18n.t('home.settings.users'), href: users_path, icon: 'fa-users', colour:'blue' do | c |
          - c.body do
            = I18n.t('home.settings.users_notice')

      -# ------------ FTP settings
      - if @institution && has_access?(@institution, Policy::Actions::UPDATE_INSTITUTION)
        = setting_card title: I18n.t('home.settings.ftp'), href: edit_ftp_setting_path(@institution), icon: 'fa-download', colour:'light-green' do | c |
          - c.body do
            = I18n.t('home.settings.ftp_notice')

