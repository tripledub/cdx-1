#new-xpert-results.resultsforms
  .row.center.add-new.collapse
    .col.pe-10
      %h2
        = link_to encounter_path(@requested_test.encounter, :test_order_page_mode => @return_page_mode), class: 'side-link', title: 'Back' do
          = image_tag "arrow-left-white.png"
        = I18n.t('xpert_results.new.header', patient_name: patient_display_name(@xpert_result.patient.name))
  %section.row
    .small-12.columns
      %header
        %h3 
          = I18n.t('xpert_results.new.details_header')
      .box-content
        = render 'form'