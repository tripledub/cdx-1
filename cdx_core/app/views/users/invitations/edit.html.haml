.row
  .col
    %h1= I18n.t('devise.invitations.edit.header')
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, id: 'accept-invitation' } do |f|
  = f.hidden_field :invitation_token
  .row
    .col
      = f.text_field :first_name, autofocus: true, placeholder: I18n.t("devise.invitations.edit.first_name"), class: "input-large"
      = f.text_field :last_name, autofocus: true, placeholder: I18n.t("devise.invitations.edit.last_name"), class: "input-large"
  .row
    .col
      = f.password_field :password, autofocus: true, placeholder: I18n.t("devise.invitations.edit.password"), class: "input-block"
  .row
    .col
      = f.password_field :password_confirmation, autofocus: true, placeholder: I18n.t("devise.invitations.edit.password_confirmation"), class: "input-block"
  %br
  .row
    .col
      = f.submit I18n.t("devise.invitations.edit.submit_button"), class: "btn-secondary input-block"
= devise_error_messages!
