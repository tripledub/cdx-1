- if @can_create
  = link_to "+", new_institution_path, class: 'btn-add side-link ontop fix', title: I18n.t('institutions.edit.btn_create')
- else
  - content_for(:subheader) do
    .row.center.edit
      .col.pe-10
        .row
          .col
            %h2
              - unless @institutions.one?
                = link_to institutions_path, class: 'side-link', title: I18n.t('views.back') do
                  = image_tag "arrow-left.png"
              = @institution.name

= render 'form'
