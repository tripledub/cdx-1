- if query_site_tests[:columns].length > 1
  %section.row
    .small-6.columns.box
      %header
        =image_tag('img/site.png')
        %h3
          = I18n.t('dashboard.index.total_tests_by_site')
      .box-content
        #chartTotalTestsSite{:style => "height: 200px; width: 100%;"}
          = react_component 'CanvasJsChart', chartDiv: 'chartTotalTestsSite', chartData: Extras::Charts::HorizontalColumns.new(query_site_tests).render
    .col.small-6.columns.box
      %header
        =image_tag('img/site.png')
        %h3
          = I18n.t('dashboard.index.average_tests_by_site')
      .box-content
        #chartAverageTestsSite{:style => "height: 200px; width: 100%;"}
          = react_component 'CanvasJsChart', chartDiv: 'chartAverageTestsSite', chartData: Extras::Charts::VerticalColumns.new(average_test_per_site).render
