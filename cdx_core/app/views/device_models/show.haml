- content_for(:subheader) do
  .row.center.edit
    .col.pe-10
      .row
        .col
          %h2
            = link_to device_models_path, class: 'side-link', title: I18n.t('views.back') do
              = image_tag "arrow-left.png"
            = @device_model.name
.row
  .col
    %p#notice= notice
    %p
      %strong
        = I18n.t('device_models.show.version')
      = @device_model.manifest.try(:version)
    %p
      %strong
        = I18n.t('device_models.show.manufacturer')
      = @device_model.institution.try(:name)
    %p
      %strong
        = I18n.t('device_models.show.definition')
      %pre= JSON.pretty_generate(Oj.load(@device_model.manifest.definition)) rescue @device_model.manifest.try(:definition)

= form_tag(publish_device_model_path(@device_model), method: :put) do |f|
  = render 'publish'

%hr/

.row
  .col
    = link_to I18n.t('views.back'), device_models_path, :class => 'btn-primary'
