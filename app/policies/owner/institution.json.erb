{
  "statement": [
    {
      "resource": "institution/<%= institution_id %>",
      "action": [
        "institution:read",
        "institution:update",
        "institution:delete",
        "institution:registerDeviceModel",
        "institution:registerDevice",
        "institution:createSite",
        "institution:createPatient",
        "institution:createRole",
        "institution:readUsers"
      ],
      "delegable": true
    },
    {
      "resource": [
        "patient?institution=<%= institution_id %>",
        "site?institution=<%= institution_id %>",
        "deviceModel?institution=<%= institution_id %>",
        "device?institution=<%= institution_id %>",
        "testResult?institution=<%= institution_id %>",
        "encounter?institution=<%= institution_id %>",
        "alert?institution=<%= institution_id %>",
        "settingsPage?institution=<%= institution_id %>",
        "pageHeader?institution=<%= institution_id %>"
      ],
      "action": "*",
      "delegable": true
    },
    {
      "resource": [
        "deviceModel?institution=<%= institution_id %>",
        "device?institution=<%= institution_id %>"
      ],
      "action": "*",
      "delegable": true
    },
    {
      "resource": "deviceModel",
      "action": "deviceModel:read",
      "delegable": true
    },
    {
      "resource": "role?institution=<%= institution_id %>",
      "action": "*",
      "delegable": true
    }
  ]
}
